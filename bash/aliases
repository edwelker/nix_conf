mvenv(){
    local TMPDIR=$(mktemp -d);
    pushd .;
    cd $TMPDIR;
    virtualenv3.11 venv;
    /usr/local/bin/virtualenv venv;
    source venv/bin/activate;
    pip install -r ${DOTDOT}/mvenv_reqs.txt
    popd;
    rm -rf .eggs;
    rm venv;
    ln -s $TMPDIR/venv venv
    if [ -f setup.py ]; then
        pip install -r requirements/test.txt;
        pip install -e .;
    fi
}

