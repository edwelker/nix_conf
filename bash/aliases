alias rbash='source ~/.bashrc'
alias aliases='vi ~/bin/nix_conf/bash/aliases && rbash'

alias c="clear"

alias ls='ls -G'
alias ll='ls -hl'
alias la='ls -al'
alias ..='cd ..'
alias ...='cd ../..'

alias h='history'

alias py='python'
alias col='source ~/env/col/bin/activate'
alias ma='python manage.py'
alias rs='python manage.py runserver'
alias shell='python manage.py shell_plus'
alias db='python manage.py dbshell'
alias orch='cd ~/git_repos/orch/'

function backup(){
    echo '.dump' | sqlite3 $*
}

alias dbsand='. ~/env/dbsandbox/bin/activate'

alias work='~/bin/work.sh'

alias g='git'

alias gitk='gitk --all'

alias gs="git status"
alias gc='git commit'
alias gca='git commit -a'
function gg() { 
    git commit -v -a -m "$*"
}

#stolen from elsewhere
# SSH Auto Completion of Remote Hosts
SSH_COMPLETE=( $(cat ~/.ssh/known_hosts | cut -f 1 -d ' ' | sed -e s/,.*//g | uniq | egrep -v [0123456789]) )
complete -o default -W "${SSH_COMPLETE[*]}" ssh 

