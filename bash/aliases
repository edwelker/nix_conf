function fr(){
    if [ $# -lt 2 ]; then
        echo 1>&2 "$0: not enough arguments"
        exit 2
    else
        ag --hidden -l $1 | xargs sed -i "s/$1/$2/"
    fi
}

function gurm(){
    if [ $# -lt 1 ]; then
        echo 1>&2 "$0: wrong number of arguments"
        exit 2
    else
        git reset -- $1 && g checkout -- $1;
    fi
}


linux_servers ()
{
   awk '/#lnx-srv-/{print $2}' /etc/hosts.nis
}

