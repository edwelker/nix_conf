    mkdir $HOME/.terminfo
    tic -o $HOME/.terminfo $DOTDOT/terminfo/tmux.terminfo
    tic -o $HOME/.terminfo $DOTDOT/terminfo/tmux-256color.terminfo
    tic -o $HOME/.terminfo $DOTDOT/terminfo/xterm-256color.terminfo
fi
